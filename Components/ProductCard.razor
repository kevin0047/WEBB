@using WEBB.Models

<div class="product-card">
    <div class="product-image-container">
        @if (!string.IsNullOrEmpty(Product.ImageUrl))
        {
                <img src="@Product.ImageUrl" alt="@Product.Name" class="product-image" @onload="OnImageLoaded" @onerror="OnImageError" />
        }
        else
        {
                <div class="placeholder-image">No Image Available</div>
        }
        @if (!imageLoaded)
        {
                <div class="loading-overlay">
                    <span class="loading-text">Loading...</span>
                </div>
        }
    </div>
    <div class="product-info">
        <h3 class="product-name">@Product.Name</h3>
        <p class="product-description">@Product.ShortDescription</p>
        <p class="product-price">@Product.Price.ToString("C")</p>
        <button class="btn btn-primary" @onclick="OnViewDetails">상세 정보</button>
    </div>
</div>

@code {
    [Parameter]
    public Product Product { get; set; }

    [Parameter]
    public EventCallback<Product> OnViewDetailsCallback { get; set; }

    private bool imageLoaded = false;

    private async Task OnViewDetails()
    {
        await OnViewDetailsCallback.InvokeAsync(Product);
    }

    private void OnImageLoaded()
    {
        imageLoaded = true;
    }

    private void OnImageError()
    {
        imageLoaded = true;
        // 여기에 기본 이미지를 설정하거나 다른 처리를 할 수 있습니다
    }
}

<style>
    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: box-shadow 0.3s ease-in-out;
        max-width: 300px;
        margin: 1rem;
    }

    .product-card:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .product-info {
        padding: 1rem;
    }

    .product-name {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .product-description {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 0.5rem;
    }

    .product-price {
        font-size: 1.1rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

     @("@media (max-width: 768px) {")
        .product-card {
            max-width: 100%;
        }
    }
</style>